<div class="page-header">
  <div id="subtitle">
  Wouldn't it be cool if
  </div>
  <h3>
  <% if @idea.title.nil? %>
      Untitled
  <% else %>
      <%= @idea.title %>
  <% end %>
    <span class="delete">
    <% if current_user?(@idea.user) %>
        <%= link_to "delete", @idea, method: :delete,
                    class: 'btn btn-xs btn-warning',
                    data: {confirm: "You sure?"} %>
    <% end %>
  </span>
  </h3>
</div>

<div class="container" id="idea-show">
    <div class="row">
      <div class="col-md-8 ">
        <%= link_to gravatar_for(@idea.user, size: 50), @idea.user %>
        <span class="user">
          <%= link_to @idea.user.name, @idea.user %>
          <span class="timestamp">
              <%= time_ago_in_words(@idea.created_at) %> ago
          </span>
        </span>
        <div class="content">
          <%= @idea.content %>
        </div>
      </div>
      <div class="col-md-4">
        <%= image_tag(@idea.picture.url, class: 'img-responsive') if @idea.picture? %>
      </div>
    </div>
</div>